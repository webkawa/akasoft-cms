<?xml version="1.0" encoding="UTF-8"?>
<component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../framework/xsd/components.xsd"
         name="Page" 
         type="classic">
    <selector id="wrapper">div</selector>
    <selector id="header">div > div.header</selector>
    <selector id="title">div > div.header > h1</selector>
    <selector id="subtitle">div > div.header > h2</selector>
    <selector id="content">div > div.content</selector>
    <selector id="main">div > div.content > div.main</selector>
    <selector id="links" explore="true">a</selector>
    <trajectories>
        <trajectory name="PageOut">
            <speed>800</speed>
            <easing>easeInQuart</easing>
            <move>
                <property>margin-left</property>
                <from>0%</from>
                <to>100%</to>
            </move>
        </trajectory>
        <trajectory name="PageIn">
            <speed>800</speed>
            <easing>easeOutQuart</easing>
            <move>
                <property>margin-left</property>
                <from>-100%</from>
                <to>0%</to>
            </move>
        </trajectory>
        <trajectory name="ScreenOut">
            <speed>800</speed>
            <easing>easeInQuart</easing>
            <move>
                <property>margin-top</property>
                <from>0%</from>
                <to>100%</to>
            </move>
        </trajectory>
        <trajectory name="ScreenIn">
            <speed>800</speed>
            <easing>easeOutQuart</easing>
            <move>
                <property>margin-top</property>
                <from>-100%</from>
                <to>0%</to>
            </move>
        </trajectory>
    </trajectories>
    <loader>
        <dom>
            <![CDATA[
                <div>
                    <div class="header">
                        <h1 />
                        <h2 />
                    </div>
                    <div class="content">
                        <div class="main">xxx</div>
                    </div>
                </div>
            ]]>
        </dom>
        <style target="wrapper">width100per height100per</style>
        <to>SwitchPage</to>
    </loader>
    <master bind="click" prevent="true" transfer="false">
        <target refresh="true">links</target>
        <action call="to" />
    </master>
    <state id="Standby">
        
    </state>
    <state id="SwitchPage">
        <in from="Standby">
            <target>wrapper</target>
            <animation base="PageOut" />
        </in>
        <begin call="refreshHeader" />
        <begin call="refreshContent" />
        <begin call="go">
            <parameter>Standby</parameter>
        </begin>
        <out to="Standby">
            <target>wrapper</target>
            <animation base="PageIn" />
        </out>
    </state>
    <state id="SwitchScreen">
        <in from="Standby">
            <target>main</target>
            <animation base="ScreenOut" />
        </in>
        <begin call="refreshContent" />
        <begin call="go">
            <parameter>Standby</parameter>
        </begin>
        <out to="Standby">
            <target>main</target>
            <animation base="ScreenIn" />
        </out>
    </state>
</component>